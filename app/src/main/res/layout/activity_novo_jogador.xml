<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_novo_jogador"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_fundo"
    tools:context="com.luke.unoplacar.activitys.NovoJogadorActivity">

    <TextView
        android:id="@+id/txtTitleClassificacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Adicione Um Novo Jogador(a)"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/layoutJogadores01"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitleClassificacao">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtNovoJogador"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@android:color/holo_red_dark"
                android:hint="Novo Jogador"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:background="#fff"/>

            <Button
                android:id="@+id/btnAddNovoJogador"
                android:layout_width="50dp"
                android:layout_height="36dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/btn_seletor_add" />

            <Button
                android:id="@+id/btnExcNovoJogador"
                android:layout_width="50dp"
                android:layout_height="36dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/btn_seletor_exc"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutJogadores02"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btnSalvarNovoJogador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADICIONAR JOGADOR"
            android:textColor="#fff"
            android:textStyle="bold"
            android:background="@drawable/btn_seletor" />

    </LinearLayout>

</RelativeLayout>
